<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" autoReload="true">
 <targets>
    <target name="file"  xsi:type="File" fileName="bin/log.txt" layout="${longdate}|${logger}|${level}|${message}" />
  </targets>
  <rules>
    <logger name="*" minlevel="Warn" writeTo="file" final="false"/>
    <logger name="ShoppingCart.*" minlevel="Debug" maxlevel="Warn" writeTo="file" />
    <logger name="NHibernate.SQL" minlevel="Debug" writeTo="file"/>
 </rules>
</nlog>